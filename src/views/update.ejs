            <script>
              function validate() {
                let errorflag = 0;
                error0.innerHTML = "";
                error1.innerHTML = "";
                error2.innerHTML = "";
                let error = document.getElementById("error");
                let title = document.getElementById("title");
                let aut = document.getElementById("author");
                let gen = document.getElementById("genre");
                let img = document.getElementById("image");
                let regex = /^[a-zA-Z0-9\-\s]+$/;

                if (title.value == "") {
                  error0.innerHTML = "Field cannot be empty";
                  errorflag = 1;
                }
                if (aut.value == "") {
                  error1.innerHTML = "Field cannot be empty";
                  errorflag = 1;
                }
                if (gen.value == "") {
                  error2.innerHTML = "Field cannot be empty";
                  errorflag = 1;
                }
                
                if (errorflag == 0) {
                  if (regex.test(title.value) == false) {
                    error0.innerHTML = "Wrong characters used";
                    errorflag = 1;
                  }
                  if (regex.test(aut.value) == false) {
                    error1.innerHTML = "Wrong characters used";
                    errorflag = 1;
                  }
                  if (regex.test(genre.value) == false) {
                    error2.innerHTML = "Wrong characters used";
                    errorflag = 1;
                  }
                }
                //  if(input.type==file){
                //   error0.innerhtml="Image uploaded successfully";
                //   errorflag=1;

                // };
                if (errorflag == 1) {
                  return false;
                }
                else {
                  return true;
                }
              }
            </script>
